{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "baseUrl": "./",       // Базовый путь для разрешения модулей
    "paths": {
      "*": ["src/*"]       // Пути для поиска модулей
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
